    },
    "timeFrame": {
      "fromTime": null,
      "toTime": null
    },
    "policyEntitlement": {
      "targetCategory": "VM",
      "locationType": "FQDN/IP",
      "policyType": "Recurring"
    },
    "policyTags": [
      "cool_tag",
      "cool_tag2"
    ],
    "timeZone": "Asia/Jerusalem"
  },
  "principals": [
    {
      "id": "principal_id",
      "name": "tester@cyberark.cloud",
